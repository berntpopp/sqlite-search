{
  "name": "sqlite-search",
  "version": "0.4.0",
  "description": "Electron-based desktop application for searching SQLite databases using FTS5",
  "main": "./dist-electron/main/index.js",
  "author": "Bernt Popp",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:dist": "electron-builder",
    "preview": "electron-vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "typecheck": "vue-tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "pinia": "^3.0.4",
    "sqlite3": "^5.1.7",
    "vue": "^3.5.13",
    "vuetify": "^3.9.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "eslint-plugin-vuetify": "^2.4.1",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.4.2",
    "sass-embedded": "^1.93.3",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^6.0.5",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^2.1.8",
    "vue-tsc": "^3.1.3"
  },
  "engines": {
    "node": ">=20.16.0",
    "pnpm": ">=9.0.0"
  },
  "build": {
    "appId": "com.berntpopp.sqlite-search",
    "productName": "sqlite-search",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "berntpopp",
      "repo": "sqlite-search"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "icon": "build/icon.png"
    }
  }
}
