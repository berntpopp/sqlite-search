{
  "name": "sqlite-search",
  "version": "0.12.0",
  "description": "Electron-based desktop application for searching SQLite databases using FTS5",
  "main": "./dist-electron/main/index.js",
  "author": "Bernt Popp",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:dist": "electron-builder",
    "dist": "pnpm run build && electron-builder",
    "preview": "electron-vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "typecheck": "vue-tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --ignore-snapshots",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:setup": "node tests/e2e/test-data/generate-test-db.js",
    "test:e2e:screenshots": "playwright test screenshots.spec.js --headed --timeout=120000",
    "test:e2e:screenshots:headless": "playwright test screenshots.spec.js --timeout=120000"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "pinia": "^3.0.4",
    "sqlite3": "^5.1.7",
    "vue": "^3.5.25",
    "vuetify": "^3.9.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "eslint-plugin-vuetify": "^2.4.1",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.4.2",
    "sass-embedded": "^1.93.3",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^6.0.5",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^2.1.8",
    "vue-tsc": "^3.1.4",
    "@playwright/test": "^1.49.1",
    "electron-playwright-helpers": "^1.8.2"
  },
  "engines": {
    "node": ">=20.16.0",
    "pnpm": ">=9.0.0"
  },
  "build": {
    "appId": "com.berntpopp.sqlite-search",
    "productName": "sqlite-search",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "berntpopp",
      "repo": "sqlite-search"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ],
      "category": "Development",
      "icon": "build/icon.png"
    }
  }
}
