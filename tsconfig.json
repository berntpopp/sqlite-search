{
  "compilerOptions": {
    // Target modern browsers (Vite 4+ transpiles to ES2020)
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    // Module resolution aligned with modern bundlers (Vite)
    "moduleResolution": "bundler",

    // Enable strict type checking for better code quality
    "strict": true,
    "noImplicitThis": true,

    // Vite/esbuild compatibility
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Vue/JSX support
    "jsx": "preserve",
    "jsxImportSource": "vue",

    // Additional strict checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Module interop
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    // Allow JS files (for gradual migration)
    "allowJs": true,
    "checkJs": false,

    // Path mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Type definitions
    "types": ["vite/client", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.js",
    "electron/**/*.ts",
    "electron/**/*.js"
  ],
  "exclude": ["node_modules", "dist", "dist-electron"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
